<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HTML5 Canvas</title>
</head>
<body>

<canvas id="myCanvas" width="500" height="300" style="border:1px solid black;"></canvas>

<script>
    const canvas = document.getElementById("myCanvas");
    const ctx = canvas.getContext("2d");

    /* 1. Filled Rectangle (base shape) */
    ctx.fillStyle = "blue";
    ctx.fillRect(50, 50, 150, 100);

    /* 2. Filled Circle (on top of rectangle) */
    ctx.beginPath();
    ctx.arc(300, 100, 40, 0, 2 * Math.PI);
    ctx.fillStyle = "green";
    ctx.fill();

    /* 3. Straight Line (connecting shapes) */
    ctx.beginPath();
    ctx.moveTo(50, 200);
    ctx.lineTo(450, 200);
    ctx.strokeStyle = "red";
    ctx.lineWidth = 2;
    ctx.stroke();

    /* 4. Text (drawn last so it stays visible) */
    ctx.font = "26px Arial";
    ctx.fillStyle = "black";
    ctx.fillText("HTML5 Canvas", 140, 260);
</script>

</body>
</html>

